generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id
  name     String
  username String
  email    String
  posts    Post[]
}

model Post {
  id     Int    @id
  title  String
  body   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}